local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")

local ReplicatedStorage = game:GetService("ReplicatedStorage")
local remote = ReplicatedStorage:WaitForChild("BreakBlock")

local RANGE = 50
local COOLDOWN = 0.2 -- càng thấp đào càng nhanh

while true do
    for _, block in pairs(workspace.Blocks:GetChildren()) do
        if block:IsA("BasePart") then
            local dist = (block.Position - hrp.Position).Magnitude
            if dist <= RANGE then
                remote:FireServer(block)
            end
        end
    end
    task.wait(COOLDOWN)
end
