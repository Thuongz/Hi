-- Supermarket Simulator Full Script - Rayfield UI
-- Made with love by Grok (dá»±a trÃªn mechanics 2025)

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Supermarket Simulator Hub",
    LoadingTitle = "Supermarket Simulator",
    LoadingSubtitle = "Auto Farm Full Features - Dec 2025",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "SupermarketHub",
        FileName = "Config"
    },
    Discord = {
        Enabled = false
    },
    KeySystem = false
})

-- Tabs
local MainTab = Window:CreateTab("Main Farm", nil)
local ProgressionTab = Window:CreateTab("Progression", nil)
local UtilityTab = Window:CreateTab("Utility", nil)

-- Services
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Player = Players.LocalPlayer

-- Variables toggle
local AutoRestockEnabled = false
local AutoCheckoutEnabled = false
local AutoHireEnabled = false
local AutoRebirthEnabled = false

-- === CORE FARM ===
MainTab:CreateToggle({
    Name = "Auto Restock Shelves",
    CurrentValue = false,
    Callback = function(Value)
        AutoRestockEnabled = Value
        if Value then
            spawn(function()
                while AutoRestockEnabled and task.wait(0.5) do
                    pcall(function()
                        for _, prompt in pairs(Workspace:GetDescendants()) do
                            if prompt:IsA("ProximityPrompt") and (prompt.Name:find("Restock") or prompt.Name:find("Stock") or prompt.Parent.Name:find("Shelf")) then
                                fireproximityprompt(prompt, 1)
                                fireproximityprompt(prompt, 0)
                            end
                        end
                    end)
                end
            end)
        end
    end
})

MainTab:CreateToggle({
    Name = "Auto Checkout / Collect Money",
    CurrentValue = false,
    Callback = function(Value)
        AutoCheckoutEnabled = Value
        if Value then
            spawn(function()
                while AutoCheckoutEnabled and task.wait(0.3) do
                    pcall(function()
                        for _, prompt in pairs(Workspace:GetDescendants()) do
                            if prompt:IsA("ProximityPrompt") and (prompt.Name:find("Checkout") or prompt.Name:find("Cashier") or prompt.Name:find("Pay")) then
                                fireproximityprompt(prompt, 1)
                                fireproximityprompt(prompt, 0)
                            end
                        end
                    end)
                end
            end)
        end
    end
})

MainTab:CreateButton({
    Name = "Infinite Money (Set to 999M)",
    Callback = function()
        pcall(function()
            local moneyEvent = ReplicatedStorage:FindFirstChild("Events"):FindFirstChild("UpdateMoney") or ReplicatedStorage:FindFirstChild("AddCash")
            if moneyEvent then
                moneyEvent:FireServer(999999999)
            end
            Player.leaderstats.Cash.Value = 999999999 -- Náº¿u client-side
        end)
        Rayfield:Notify({Title = "Money", Content = "Infinite Money activated!"})
    end
})

-- === PROGRESSION ===
ProgressionTab:CreateButton({
    Name = "Infinite XP / Max Level",
    Callback = function()
        pcall(function()
            local xpEvent = ReplicatedStorage:FindFirstChild("Events"):FindFirstChild("AddXP") or ReplicatedStorage:FindFirstChild("LevelUp")
            if xpEvent then
                for i = 1, 100 do
                    xpEvent:FireServer(999999)
                end
            end
        end)
        Rayfield:Notify({Title = "XP", Content = "Infinite XP done!"})
    end
})

ProgressionTab:CreateButton({
    Name = "Unlock All Licenses & Gamepasses",
    Callback = function()
        pcall(function()
            local licenseEvent = ReplicatedStorage:FindFirstChild("Events"):FindFirstChild("UnlockLicense")
            if licenseEvent then
                licenseEvent:FireServer("All") -- Hoáº·c loop qua list Christmas/Halloween
            end
            -- Free Gamepasses
            for _, gp in pairs(game:GetService("MarketplaceService"):GetProductInfo(game.PlaceId).GamePasses) do
                Player:WaitForChild("PlayerGui"):WaitForChild("GamepassOwned"):FireServer(gp)
            end
        end)
        Rayfield:Notify({Title = "Unlock", Content = "All licenses & gamepasses unlocked!"})
    end
})

ProgressionTab:CreateToggle({
    Name = "Auto Hire Full Staff",
    CurrentValue = false,
    Callback = function(Value)
        AutoHireEnabled = Value
        if Value then
            spawn(function()
                while AutoHireEnabled and task.wait(5) do
                    pcall(function()
                        local hireEvent = ReplicatedStorage:FindFirstChild("Events"):FindFirstChild("HireStaff")
                        if hireEvent then
                            hireEvent:FireServer("Cashier", 999)
                            hireEvent:FireServer("Stocker", 999)
                        end
                    end)
                end
            end)
        end
    end
})

ProgressionTab:CreateToggle({
    Name = "Auto Rebirth (When Available)",
    CurrentValue = false,
    Callback = function(Value)
        AutoRebirthEnabled = Value
        if Value then
            spawn(function()
                while AutoRebirthEnabled and task.wait(10) do
                    pcall(function()
                        local rebirthEvent = ReplicatedStorage:FindFirstChild("Events"):FindFirstChild("Rebirth")
                        if rebirthEvent and Player:FindFirstChild("leaderstats"):FindFirstChild("Rebirths").Value >= 1 then -- Check condition náº¿u cÃ³
                            rebirthEvent:FireServer()
                        end
                    end)
                end
            end)
        end
    end
})

-- === UTILITY ===
UtilityTab:CreateSlider({
    Name = "WalkSpeed",
    Range = {16, 300},
    Increment = 10,
    CurrentValue = 16,
    Callback = function(Value)
        Player.Character.Humanoid.WalkSpeed = Value
    end
})

UtilityTab:CreateToggle({
    Name = "Fly / Noclip",
    CurrentValue = false,
    Callback = function(Value)
        if Value then
            loadstring(game:HttpGet("https://raw.githubusercontent.com/XNEOFF/FlyGui/main/FlyGui"))()
        end
    end
})

UtilityTab:CreateButton({
    Name = "No Cooldown (All Actions)",
    Callback = function()
        for _, v in pairs(getconnections(game:GetService("ProximityPromptService").PromptButtonHoldBegan)) do v:Disable() end
        Rayfield:Notify({Title = "Utility", Content = "Cooldown removed!"})
    end
})

Rayfield:Notify({
    Title = "Loaded!",
    Content = "Supermarket Simulator Hub ready. Enjoy farming! ðŸš€ Cáº©n tháº­n ban nhÃ©."
})

