-- Don't Steal the Baby Brainrots - Custom Hub NO KEY by Grok (Jan 2026)
-- Features: Auto Steal Nearby Sleeping Babies, Auto Tele Base/Escape, Auto Collect Cash, Auto Sell, Speed, ESP Babies

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({Name = "Baby Brainrots Hub - NO KEY", KeySystem = false})

local MainTab = Window:CreateTab("Auto Farm")
local PlayerTab = Window:CreateTab("Player")

getgenv().AutoSteal = false
getgenv().AutoEscape = false
getgenv().AutoCollect = false
getgenv().Speed = 50

-- Toggles
MainTab:CreateToggle({Name = "Auto Steal Baby (Nearby)", Callback = function(v) getgenv().AutoSteal = v end})
MainTab:CreateToggle({Name = "Auto Escape to Base (khi cầm Baby)", Callback = function(v) getgenv().AutoEscape = v end})
MainTab:CreateToggle({Name = "Auto Collect Cash", Callback = function(v) getgenv().AutoCollect = v end})

PlayerTab:CreateSlider({Name = "Speed", Range = {16, 200}, Callback = function(v) getgenv().Speed = v end})

-- Speed Loop
RunService.Heartbeat:Connect(function()
   if player.Character and player.Character:FindFirstChild("Humanoid") then
      player.Character.Humanoid.WalkSpeed = getgenv().Speed
   end
end)

-- Auto Collect Cash (ProximityPrompt cash)
task.spawn(function()
   while task.wait(0.2) do
      if getgenv().AutoCollect then
         for _, prompt in workspace:GetDescendants() do
            if prompt:IsA("ProximityPrompt") and (prompt.ActionText:lower():find("collect") or prompt.ObjectText:lower():find("cash") or prompt.ObjectText:lower():find("money")) then
               local char = player.Character
               if char and (prompt.Parent.Position - char.HumanoidRootPart.Position).Magnitude < 50 then
                  fireproximityprompt(prompt)
               end
            end
         end
      end
   end
end)

-- Auto Steal (find sleeping babies, grab)
task.spawn(function()
   while task.wait(0.5) do
      if getgenv().AutoSteal then
         local char = player.Character
         if char then
            for _, baby in workspace:GetDescendants() do
               if baby.Name:lower():find("baby") or baby.Name:lower():find("brainrot") then
                  if baby:FindFirstChild("Humanoid") and baby.Humanoid.Health > 0 and (baby.PrimaryPart.Position - char.HumanoidRootPart.Position).Magnitude < 20 then
                     -- Assume grab via ProximityPrompt or tool
                     local prompt = baby:FindFirstChildOfClass("ProximityPrompt")
                     if prompt then fireproximityprompt(prompt) end
                  end
               end
            end
         end
      end
   end
end)

-- Auto Escape (when holding tool/baby, tele to base)
task.spawn(function()
   while task.wait(0.1) do
      if getgenv().AutoEscape then
         local char = player.Character
         if char and char:FindFirstChildOfClass("Tool") then  -- Holding stolen baby
            -- Find your base (common: ReplicatedStorage.Plots[player.Name] or workspace.Plots[player.Name])
            pcall(function()
               local base = workspace:FindFirstChild("Plots") and workspace.Plots:FindFirstChild(player.Name)
               or game.ReplicatedStorage:FindFirstChild("Plots") and game.ReplicatedStorage.Plots:FindFirstChild(player.Name)
               if base then
                  local spawn = base:FindFirstChild("Spawn") or base.PrimaryPart
                  char.HumanoidRootPart.CFrame = spawn.CFrame + Vector3.new(0,5,0)
                  -- Auto sell prompt
                  task.wait(0.5)
                  for _, p in base:GetDescendants() do
                     if p:IsA("ProximityPrompt") and p.ActionText:lower():find("sell") then
                        fireproximityprompt(p)
                     end
                  end
               end
            end)
         end
      end
   end
end)

-- TP Base Button
MainTab:CreateButton({Name = "TP My Base", Callback = function()
   local base = workspace:FindFirstChild("Plots") and workspace.Plots:FindFirstChild(player.Name)
   if base and player.Character then
      player.Character.HumanoidRootPart.CFrame = (base.Spawn or base.PrimaryPart).CFrame + Vector3.new(0,10,0)
   end
end})

Rayfield:Notify({Title = "Loaded NO KEY!", Content = "Bật Auto Steal & Escape farm ngay!"})
