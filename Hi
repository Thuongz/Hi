-- Rayfield Hub for [+1 Speed The Unraveling] | Inf Speed + Inf Stamina + Auto Open Egg (Keyless)
-- Updated Dec 2025 | Fluxus/Delta/Arceus X Compatible
-- Remotes: SpeedBoost("WalkingSpeedGain"/"StaminaGain"/"HatchEgg", math.huge)
-- Drag menu dá»… dÃ ng, save config tá»± Ä‘á»™ng!

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Unraveling Hub | Rayfield",
   LoadingTitle = "Loading Hub...",
   LoadingSubtitle = "by Grok",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "UnravelingHub",
      FileName = "config"
   },
   KeySystem = false
})

local MainTab = Window:CreateTab("Main Features", 4483362458) -- Speed icon

local RS = game:GetService("ReplicatedStorage")
local RunService = game:GetService("RunService")

local speedConn, staminaConn, eggConn = nil, nil, nil

-- Inf Speed Toggle
local SpeedToggle = MainTab:CreateToggle({
   Name = "Inf Speed",
   CurrentValue = false,
   Flag = "InfSpeed",
   Callback = function(Value)
      if Value then
         speedConn = RunService.Heartbeat:Connect(function()
            pcall(function()
               RS.SpeedBoost:FireServer("WalkingSpeedGain", math.huge)
            end)
         end)
      else
         if speedConn then speedConn:Disconnect(); speedConn = nil end
      end
   end
})

-- Inf Stamina Toggle
local StaminaToggle = MainTab:CreateToggle({
   Name = "Inf Stamina",
   CurrentValue = false,
   Flag = "InfStamina",
   Callback = function(Value)
      if Value then
         staminaConn = RunService.Heartbeat:Connect(function()
            pcall(function()
               RS.SpeedBoost:FireServer("StaminaGain", math.huge)
            end)
         end)
      else
         if staminaConn then staminaConn:Disconnect(); staminaConn = nil end
      end
   end
})

-- Auto Open Egg Toggle (Loop hatch/open egg via remote - test & bÃ¡o náº¿u arg sai)
local EggToggle = MainTab:CreateToggle({
   Name = "Auto Open Egg",
   CurrentValue = false,
   Flag = "AutoEgg",
   Callback = function(Value)
      if Value then
         eggConn = RunService.Heartbeat:Connect(function()
            pcall(function()
               RS.SpeedBoost:FireServer("HatchEgg", math.huge)  -- Hoáº·c "OpenEgg", "EggHatchGain" náº¿u ko work â†’ bÃ¡o fix
            end)
         end)
      else
         if eggConn then eggConn:Disconnect(); eggConn = nil end
      end
   end
})

local InfoTab = Window:CreateTab("Info")

InfoTab:CreateLabel("Hub Features:")
InfoTab:CreateLabel("â€¢ Inf Speed: Cháº¡y siÃªu nhanh")
InfoTab:CreateLabel("â€¢ Inf Stamina: KhÃ´ng háº¿t sá»©c")
InfoTab:CreateLabel("â€¢ Auto Open Egg: Tá»± má»Ÿ trá»©ng (loop hatch)")
InfoTab:CreateLabel("")
InfoTab:CreateLabel("Notes:")
InfoTab:CreateLabel("â€¢ Rayfield Menu: Pro UI, save toggle")
InfoTab:CreateLabel("â€¢ Keyless 100%")
InfoTab:CreateLabel("â€¢ DÃ¹ng alt acc, rá»§i ro ban!")
InfoTab:CreateLabel("â€¢ Egg ko work? BÃ¡o arg remote chÃ­nh xÃ¡c")

print("Loaded Rayfield Hub for The Unraveling! Toggle ON Ä‘á»ƒ dÃ¹ng ðŸš€")

Rayfield:Notify({
   Title = "Hub Loaded!",
   Content = "Inf Speed + Stamina + Auto Egg ready!",
   Duration = 5,
   Image = 4483362458
